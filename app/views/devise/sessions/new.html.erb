 <div class="container">    
        <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
            <div class="panel panel-info" >
                    <div class="panel-heading"> 
                    </h2>Sign In</h2>
                   
                        <div class="panel-title"></div>
                        <div style="padding-top:30px" class="panel-body" >
                        <%= devise_error_messages! %>
                           <div class="form-group">
                        </div>
                    </div>
                         
                        </div>     

                    <div style="padding-top:30px" class="panel-body" >
                    
                    <form id="loginform" class="form-horizontal" role="form">

                      <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>   
                              <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder:'Your Email' %>
                      </div>
                    
                                
                        <div style="margin-bottom: 25px" class="input-group">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <%= f.password_field :password, class: 'form-control', placeholder: 'Your Password' %>
                        </div>
                      
                            <div class="input-group">
                                 <%= f.submit 'Log in', :class => 'button right' %>
                            <div class="checkbox">
                                <% if devise_mapping.rememberable? -%>
                                <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                                <% end -%>
                            </div>
                            </div>
                            <%- if devise_mapping.recoverable? %>
                            <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
                            <% end -%> |
                            <%- if devise_mapping.registerable? %>
                            <%= link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %>
                            <% end -%>
                       </form>       
                    </div>
                  </div>
            <% end %>
        </div>
                