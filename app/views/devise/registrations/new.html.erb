<div class="jumbotron">
  <div class="page-header">
    <div class="authform">


    
    <h3>Sign up</h3>
    <br>
    <br>
          
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <%= f.input :first_name, label: 'First Name' %>
      <%= f.input :last_name, label: 'Last Name' %>
      <%= f.input :email, placeholder: 'example@domain.com' %>
      <%= f.input :password, label: 'Password', placeholder: 'Minimum of eight characters.' %>
      <%= f.input :password_confirmation, label: 'Re-enter your password' %>
      <%= f.button :submit %>
    <% end %>






      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <h3>Sign up</h3>
        <br>
        <br>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, :autofocus => true, class: 'form-control' %>
         <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
         <%= f.submit 'Sign up', :class => 'button right' %>
      <% end %>
    </div>
  </div>
</div>