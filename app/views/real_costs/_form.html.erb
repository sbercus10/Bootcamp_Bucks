<h1>Calculate Your Real Cost of Bootcamp</h1>

<%= form_for @cost_form, url: new_real_cost_path, method: :create do |f| %>

  <% @bootcamp.find_by_name %>
  <%= f.select(:name, Bootcamp.all, :prompt => "Select a Bootcamp") %>
  <!-- user input for current_salary -->
  <%= f.input(:salary) %>
  <%= label_tag(:salary, "What is your current salary?") %>
  <!-- user input for length -->
  <%= f.input :length, :as => :select,
      :collection =>
      [['12 months', false], ['24 months', false], ['36 months', false]],
      :include_blank => false,
      :label => "Loan Length" %>
  

  

