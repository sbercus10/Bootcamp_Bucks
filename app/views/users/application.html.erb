
<div class="container">
<div class="rc-main">
  <h2>Bootcamp Bucks Application Form</h2>
  <h3>We want to know more about you. Please answer the following questions.</h3>
</div>
<div class="rc-calc">
<div class="row">
<div class="form">
<%= simple_form_for @user, url: user_submit_application_path do |f| %>
  <%= f.input :address, label: 'Address', placeholder: ' 1000 State Street, #204' %>
  <%= f.input :city, label: 'City', placeholder: ' Salt Lake City' %>
  <%= f.input :state, :as => :select, 
            :collection => 
             [['Alabama',false],['Alaska',false],['Arizona',false],['Arkansas',false],['California',false],['Colorado',false],['Connecticut',false],['Delaware',false],['District of Columbia',false],['Florida',false],['Georgia',false],['Hawaii',false],['Idaho',false],['Illinois',false],['Indiana',false],['Iowa',false],['Kansas',false],['Kentucky',false],['Louisiana',false],['Maine',false],['Maryland',false],['Massachusetts',false],['Michigan',false],['Minnesota',false],['Mississippi',false],['Missouri',false],['Montana',false],['Nebraska',false],['Nevada',false],['New Hampshire',false],['New Jersey',false],['New Mexico',false],['New York',false],['North Carolina',false],['North Dakota',false],['Ohio',false],['Oklahoma',false],['Oregon',false],['Pennsylvania',false],['Rhode Island',false],['South Carolina',false],['South Dakota',false],['Tennessee',false],['Texas',false],['Utah',false],['Vermont',false],['Virginia',false],['Washington',false],['West Virginia',false],['Wisconsin',false],['Wyoming',false],['I live outisde the US',false]],
            :include_blank => false, 
            :label => "State" %>
  <%= f.input :phone_number, label: 'Phone Number', placeholder: ' (800)555-5555' %>
  <%= f.input :education, :as => :select, 
            :collection => 
            [['Less than HS',false],
            ['HS Graduate or Equivalent',false],
            ['Technical School',false],
            ['Some College',false],
            ['2 Year College/Assoc Degree',false],
            ['4 Year College Bachelor Degree',true],
            ['Master Degree',false],
            ['Doctorate',false]],
            :include_blank => false, 
            :label => "Highest Education Level Attained" %>
  <%= f.input :student_loan_amount,  :as => :select, 
            :collection => 
            [['I don\'t have any student loans',false],
            ['$0 - $2,499',false],
            ['$2,500 - $4,999',false],
            ['$5,000 - $7,499',true],
            ['$7,500 - $9,999',false],
            ['$10,000 - $12,499',false],
            ['$12,500 - $14,999',false],
            ['$15,000 - $19,999',false],
            ['$20,000 - $29,999',false],
            ['$30,000 - $39,999',false],
            ['$40,000 - $49,999',false],
            ['More than $50,000',false]],
            :include_blank => false, 
            :label => "Do you have student loans? If so, how much?" %>
  <%= f.input :current_company, label: 'Current Company', placeholder: ' NewCo' %>
  <%= f.input :current_job, label: 'Current Job Title?', placeholder: ' VP of Awesomeness' %>
  <%= f.input :current_salary, :as => :select, 
            :collection => 
            [['$0 - $9,999',false],
            ['$10,000 - $19,999',false],
            ['$20,000 - $29,999',true],
            ['$30,000 - $39,999',false],
            ['$40,000 - $49,999',false],
            ['$50,000 - $59,999',false],
            ['$60,000 - $69,999',false],
            ['$70,000 - $79,999',false],
            ['$80,000 - $89,999',false],
            ['$90,000 - $99,999',false],
            ['More than $100,000',false]],
            :include_blank => false, 
            :label => "Current Yearly Salary" %>
  <%= f.input :personal_reference_name, label: 'Personal reference name', placeholder: ' John Doe' %>
  <%= f.input :personal_reference_contact, label: 'Personal reference email address', placeholder: ' john.doe@example.com' %>
  <%= f.input :current_living_situation, :as => :select, 
            :collection => 
            [['I rent',false],
            ['I have a mortgage',true],
            ['I live with my parents',false],
            ['I\'m staying in a hotel',false]],
            :include_blank => false, 
            :label => "Living Situation" %>
  <%= f.input :credit_score, label: 'Your Credit Score (from CreditKarma.com)', placeholder: ' 700' %>
  <%= f.input :linkedin_profile, label: 'Link to Personal Linkedin Profile', placeholder: ' www.linkedin.com/example' %>
  <%= f.input :facebook_profile, label: 'Link to Personal Facebook Page', placeholder: ' www.facebook.com/example' %>
  <%= f.input :twitter_profile, label: 'Personal Twitter Handle', placeholder: ' @example' %>
  <br>
  <div class="rc-btn">
    <button type="submit" class="btn btn-default">Submit</button>
  </div>
<% end %>


    </div>
  </div>
</div>

</div>


